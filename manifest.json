  "browser_action": {
      "default_icon": "logo.png"
  },
  
  // javascripts
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js" : ["jquery.min.js", "revert_ao.js"]
    }
  ]
}